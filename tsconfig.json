{
  "compilerOptions": {
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "lib": [
      "DOM",
      "ES2019"
    ],
    "target": "ES5",
    "strictBindCallApply": true
  },
  "ts-node": {
    "compilerOptions": {
      "jsx": "react"
    }
  },
  "include": [
    "./src/types.d.ts"
  ]
}